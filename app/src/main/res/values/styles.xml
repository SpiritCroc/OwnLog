<resources>

    <!-- Log list -->
    <style name="LogListText.Header" parent="">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">?attr/textColorListHeader</item>
    </style>

    <style name="LogListText.Date2" parent="">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">?attr/textColorListDate2</item>
    </style>

    <style name="LogListText.Date3" parent="">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">?attr/textColorListDate3</item>
    </style>

    <style name="LogListText.Title" parent="">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">?attr/textColorListTitle</item>
    </style>

    <style name="LogListText.Content" parent="">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">?attr/textColorListContent</item>
    </style>

    <style name="LogListText.Tag" parent="">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">?attr/textColorListTag</item>
    </style>

    <style name="LogListText.Status" parent="">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">?attr/textColorStatus</item>
    </style>

    <style name="LogListIcon.Attachment" parent="">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <!-- Edit log item -->
    <style name="EditDateTimeButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:minWidth">24dp</item>
        <item name="android:minHeight">24dp</item>
    </style>

    <style name="AddTagButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:minWidth">18dp</item>
        <item name="android:minHeight">18dp</item>
    </style>

    <style name="AddAttachmentButton">
        <item name="android:minWidth">18dp</item>
        <item name="android:minHeight">18dp</item>
    </style>

    <!-- Show log item -->
    <style name="LogItemShowText.Title" parent="">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LogItemShowText.Content" parent="">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="LogItemShowText.Tags" parent="">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <!-- Edit tags -->
    <style name="EditLogTags.TagName" parent="">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="EditLogTags.EditTagButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:minWidth">18dp</item>
        <item name="android:minHeight">18dp</item>
    </style>

    <!-- Attachments -->
    <style name="AttachmentsTitle">
        <item name="android:background">?attr/backgroundColorPeekTitle</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="AttachmentsContent">
        <item name="android:background">?attr/backgroundColorPeekContent</item>
    </style>

    <style name="AttachmentsActionBar">
        <item name="android:background">@drawable/background_attachments_action_bar</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="AttachmentsButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:minWidth">18dp</item>
        <item name="android:minHeight">18dp</item>
    </style>

    <!-- SimpleDateFormatPreference -->
    <style name="SimpleDateFormatPreference.AddButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:minWidth">24dp</item>
        <item name="android:minHeight">24dp</item>
    </style>
    <style name="SimpleDateFormatPreference.ClearButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:minWidth">24dp</item>
        <item name="android:minHeight">24dp</item>
    </style>
</resources>
