<resources>-->

    <style name="AppThemeLight" parent="MaterialDrawerTheme.Light.DarkToolbar">
        <!-- extends Theme.AppCompat.Light.DarkActionBar -->
        <item name="colorPrimary">#2196f3</item>
        <item name="colorPrimaryDark">#1976d2</item>
        <item name="colorAccent">#ff8f00</item>

        <item name="textColorListHeader">?attr/colorAccent</item>
        <item name="textColorListDate2">#b3ff8f00</item>
        <item name="textColorListDate3">#8a000000</item>
        <item name="textColorListTitle">#de000000</item>
        <item name="textColorListTag">#60000000</item>
        <item name="textColorStatus">#60000000</item>
        <item name="foregroundColorListAttachment">#60000000</item>
        <item name="backgroundColorListHeader">?android:attr/colorBackground</item>
        <item name="backgroundColorListItem">@android:color/transparent</item>
        <item name="backgroundColorListItemSelected">#1e000000</item>
        <item name="backgroundColorEditTagView">#1e000000</item>
        <item name="backgroundColorPeekTitle">#eeeeee</item>
        <item name="backgroundColorPeekContent">?android:attr/colorBackground</item>
        <item name="backgroundColorPeekCard">?android:attr/colorBackgroundFloating</item>
        <item name="backgroundColorPeekActionBar">?android:attr/colorBackgroundFloating</item>

        <!-- modify material drawer colors -->
        <item name="material_drawer_background">?android:attr/colorBackground</item>
    </style>

    <style name="AppThemeDark" parent="MaterialDrawerTheme.ActionBar">
        <!-- extends Theme.AppCompat -->
        <item name="colorPrimary">#2196f3</item>
        <item name="colorPrimaryDark">#1976d2</item>
        <item name="colorAccent">#ffc400</item>

        <item name="popupMenuStyle">@style/ThemeOverlay.AppCompat.Dark</item>

        <item name="textColorListHeader">?attr/colorAccent</item>
        <item name="textColorListDate2">#b3ffc400</item>
        <item name="textColorListDate3">#b3ffffff</item>
        <item name="textColorListTitle">#ffffffff</item>
        <item name="textColorListTag">#80ffffff</item>
        <item name="textColorStatus">#80ffffff</item>
        <item name="foregroundColorListAttachment">#80ffffff</item>
        <item name="backgroundColorListHeader">?android:attr/colorBackground</item>
        <item name="backgroundColorListItem">@android:color/transparent</item>
        <item name="backgroundColorListItemSelected">#33ffffff</item>
        <item name="backgroundColorEditTagView">#33ffffff</item>
        <item name="backgroundColorPeekTitle">#ff424242</item>
        <item name="backgroundColorPeekContent">#ff212121</item>
        <item name="backgroundColorPeekCard">?android:attr/colorBackground</item>
        <item name="backgroundColorPeekActionBar">?android:attr/colorBackground</item>

        <!-- modify material drawer colors -->
        <item name="material_drawer_background">?android:attr/colorBackground</item>
        <item name="material_drawer_selected">#ff424242</item>
    </style>

    <style name="AppThemeDarkToolbarForLightThemes" parent="AppThemeDark">
        <item name="popupMenuStyle">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppThemeLight.NoActionBar">
        <!-- Use toolbar instead of old school actionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="toolbarStyle">@style/AppThemeDarkToolbarForLightThemes</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppThemeDark.NoActionBar">
        <!-- Use toolbar instead of old school actionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="toolbarStyle">@style/AppThemeDark</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
</resources>
