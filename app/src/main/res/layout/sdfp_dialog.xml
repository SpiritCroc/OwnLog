<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/sdfp_dialog_padding_horizontal"
    android:paddingRight="@dimen/sdfp_dialog_padding_horizontal">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/preference_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textNoSuggestions" />
        <ImageView
            android:id="@+id/preference_clear"
            android:src="@drawable/sdfp_ic_clear"
            android:theme="@style/SimpleDateFormatPreference.ClearButton"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/sdfp_clear" />
        <ImageView
            android:id="@+id/preference_add"
            android:src="@drawable/sdfp_ic_add"
            android:theme="@style/SimpleDateFormatPreference.AddButton"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/sdfp_add" />
    </LinearLayout>

    <TextView
        android:id="@+id/preference_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
